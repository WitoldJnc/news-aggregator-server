<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="202004111850_create_rss_table" author="tivanov.anton" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="scrum_rss" schemaName="public"/>
            </not>
        </preConditions>
        <sql>
            create table public.scrum_rss (
            id serial primary key,
            link_to_resource varchar(255),
            link_to_rss varchar(255),
            name varchar(255)
            )
        </sql>
    </changeSet>

    <changeSet id="202004111850_create_rss_parent_table" author="tivanov.anton" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="scrum_rss_parent" schemaName="public"/>
            </not>
        </preConditions>
        <sql>
            create table public.scrum_rss_parent (
            id serial primary key,
            link_to_resource varchar(255),
            name varchar(255)
            )
        </sql>
    </changeSet>

    <changeSet id="202004111850_rss_table_add_parent_field" author="tivanov.anton" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="scrum_rss" schemaName="public"/>
            <not>
                <columnExists tableName="scrum_rss" columnName="parent_id" schemaName="public"/>
            </not>
        </preConditions>
        <sql>
            alter table scrum_rss add column parent_id integer;
        </sql>
    </changeSet>

    <changeSet id="202004111850_add_fk_scrum_rss_parent_id_scrum_rss_parent" author="tivanov.aton" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="scrum_rss" columnName="parent_id" schemaName="public"/>
            <tableExists tableName="scrum_rss" schemaName="public"/>
            <tableExists tableName="scrum_rss_parent" schemaName="public"/>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_scrum_rss_parent_id_scrum_rss_parent" foreignKeyTableName="scrum_rss" schemaName="public"/>
            </not>
        </preConditions>
        <sql>
            alter table public.scrum_rss add constraint fk_scrum_rss_parent_id_scrum_rss_parent foreign key (parent_id)
            references public.scrum_rss_parent (id) match full;
        </sql>
    </changeSet>
</databaseChangeLog>